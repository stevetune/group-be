.footer-location
	if locals.footer_location_top_icon
		- let ti = locals.footer_location_top_icon
		+icon(ti.class, ti.href, "is-top")

	if locals.footer_locations
		each location in locals.footer_locations
			.footer-location--location
				if location.header_title
					h2.footer-location--header !{location.header_title} 
				if location.title
					.footer-location--title !{location.title}
				.footer-location--address-container
					.footer-location--line !{location.address_line_1}
					.footer-location--line !{location.address_line_2}
					.footer-location--line !{location.address_line_3}
					.footer-location--line
						if location.phone_href
							a.footer-location--anchor(href=`${location.phone_href}`)
								span.footer-location--anchor-text !{location.phone_text}
						else
							| !{location.phone_text}	
					.footer-location--line !{location.fax_text}
					.footer-location--line 
						if location.email_href
							a.footer-location--anchor(href=`${location.email_href}`)
								span.footer-location--anchor-text !{location.email_text}
						else
							| !{location.email_text}
					if location.icons
						.footer-location--icons
							each icon in location.icons
								+icon(icon.class, icon.href)
				if location.links
					each link in location.links
						a.footer-location--line.footer-location--anchor(href=`${link.href}`) #{link.title}

						