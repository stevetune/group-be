script.

	function menuHeightOnWindowResize()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)
		const headerMenu = document.querySelector('.header-menu')

		window.addEventListener('resize', function()
		{
			setMenuHeight(mobileWidth, headerMenu)			
		})

		window.addEventListener('load', function()
		{
			setMenuHeight(mobileWidth, headerMenu)
		})

		function setMenuHeight(mobileWidth, headerMenu)
		{
			if(window.innerWidth <= mobileWidth)
			{
				headerMenu.style.height = '0px'
			}
			else
			{
				headerMenu.style.height = 'auto'
			}
		}
	}

	function setAbsoluteTopPosition()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)
		const header = document.getElementById('header')
		const headerMenu = document.querySelector('.header-menu')

		window.addEventListener('load', function(){
			if(window.innerWidth <= mobileWidth)
			{
				headerMenu.style.top = `${header.scrollHeight}px`
			}
		})
		
		window.addEventListener('resize', function()
		{
			if(window.innerWidth <= mobileWidth)
			{
				headerMenu.style.top = `${header.scrollHeight}px`
			}
		})
	}

	function openCloseExpandCollapse()
	{
		window.addEventListener('load', function()
		{
			const burger = document.querySelector('.burger--box')
			const closeButton = document.querySelector('.header-menu--close-button')
			const header = document.getElementById('header')
			const headerMenu = document.querySelector('.header-menu')

			burger.addEventListener('click', function()
			{
			  	expandOrCollapseMenuSection(headerMenu, false)
			})

			closeButton.addEventListener('click', function()
			{
			  	expandOrCollapseMenuSection(headerMenu, false)
			})
		})
	}

	function plusButtonsExpandCollapse()
	{
		window.addEventListener('load', function()
		{
			let plusButtonContainers = document.querySelectorAll('.header-menu--dd-icon-container')

			plusButtonContainers.forEach(function(plusButtonContainer)
			{
				plusButtonContainer.addEventListener('click', function()
				{
					let headerSubmenu = plusButtonContainer.closest('.header-menu--menu-list-item').querySelector('.header-menu--submenu')
					expandOrCollapseMenuSection(headerSubmenu, true)
				})

			})
		})
	}

	function resetMenuOnDesktopResize()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)
		const headerMenu = document.querySelector('.header-menu')
		const subMenus = document.querySelectorAll('.header-menu--submenu')

		window.addEventListener('resize', function()
		{
			if(window.innerWidth > mobileWidth)
			{
				headerMenu.classList.remove('is-showing')
				subMenus.forEach(function(subMenu){
					subMenu.classList.remove('is-showing')
					subMenu.style.height = 'auto'
				})
				headerMenu.style.height = 'auto'
			}
		})
	}

	function resetSubMenusOnMobileResize()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)
		const subMenus = document.querySelectorAll('.header-menu--submenu')

		window.addEventListener('resize', function()
		{
			if(window.innerWidth <= mobileWidth)
			{
				subMenus.forEach(function(subMenu){
					subMenu.style.height = '0px'
				})
			}
		})
	}

	function setStaticMainMenuInlineHeight()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)

		window.addEventListener('load', function(){
			const headerMenu = document.querySelector('.header-menu')
			
			headerMenu.style.height = `${headerMenu.scrollHeight}px`
			
			window.addEventListener('resize', function()
			{
				if(window.innerWidth <= mobileWidth)
				{
					headerMenu.style.height = 'unset'
					headerMenu.style.height = `${headerMenu.scrollHeight}px`
				}
			})
		})
	}

	function onClickAddRemoveIsShowing()
	{
		window.addEventListener('load', function()
		{
			const burger = document.querySelector('.burger--box')
			const headerMenu = document.querySelector('.header-menu')
			const closeButton = document.querySelector('.header-menu--close-button')

			burger.addEventListener('click', function()
			{
				headerMenu.classList.toggle('is-showing')
			})

			closeButton.addEventListener('click', function()
			{
				headerMenu.classList.toggle('is-showing')
			})

			document.body.addEventListener('click', function(evt)
			{
				if( evt.target !== headerMenu )
				{
					console.log('should close')
				}
			})
		})
	}

	function slideLeftRightSub()
	{
		let plusButtonContainers = document.querySelectorAll('.header-menu--plus-button-container')

		plusButtonContainers.forEach(function(plusButtonContainer)
		{
			plusButtonContainer.addEventListener('click', function()
			{
				let submenu = plusButtonContainer.closest('.header-menu--menu-list-item').querySelector('.header-menu--submenu')
				submenu.classList.toggle('is-showing')
			})

		})

		let submenuCloseButtons = document.querySelectorAll('.header-menu--submenu-close-button')

		submenuCloseButtons.forEach(function(submenuCloseButton)
		{
			submenuCloseButton.addEventListener('click', function(){
				submenuCloseButton.closest('.header-menu--submenu').classList.toggle('is-showing')
			})
		})
	}

	function resetPlusButtonsOnDesktopResize()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)

		window.addEventListener('load', function()
		{
			const plusButtons = document.querySelectorAll('.header-menu--plus-button')
			
			window.addEventListener('resize', function()
			{
				plusButtons.forEach(function(plusButton)
				{
					plusButton.classList.remove('is-active')
				})
			})
		})
	}

	function setSubMenuHeightsToZeroOnLoad()
	{
		const mobileWidthWithPx = `#{locals.mobileWidth}`
		const mobileWidth = mobileWidthWithPx.substring(0, mobileWidthWithPx.length - 2)

		window.addEventListener('load', function()
		{
			const subMenus = document.querySelectorAll('.header-menu--submenu')

			if(window.innerWidth <= mobileWidth)
			{
				subMenus.forEach(function(subMenu)
				{
					subMenu.style.height = '0px'
				})
			}
		})
	}




